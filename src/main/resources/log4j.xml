<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%n%-6p%m %n==> %l%n"/>
		</layout>
	</appender>	
	
	<appender name="file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="Threshold" value="DEBUG"/>
		<param name="File" value="client_sdk.log"/>
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%n%-6p:ThreadName(%t) [%C:%L line]:%d{yy-MM-dd HH:mm:ss} %n%m%n"/>
		</layout>
	</appender>
		
	<logger name="com.renren.api.client" additivity="false">
		<level value="info"/>
		<appender-ref ref="stdout"/>
	</logger>
		
	<root>
		<priority value="warn"/>
		<appender-ref ref="stdout"/>
		<!--
		<appender-ref ref="file"/>
		-->
	</root>
	
</log4j:configuration>
